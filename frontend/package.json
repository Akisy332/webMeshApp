{
  "name": "webmeshapp-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:prod": "tsc && npm run bundle",
    "bundle": "esbuild app/static/dist/main.js --bundle --outfile=app/static/dist/bundle.js --format=esm",
    "dev": "tsc && python run.py"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "esbuild": "^0.19.0"
  }
}